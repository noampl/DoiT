<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.dialogs.AddGroupDialog">

    <data>
        <variable
            name="groupsViewModel"
            type="com.example.doit.viewmodel.GroupsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/avatar_img"
            android:layout_width="@dimen/xl_avatar"
            android:layout_height="@dimen/xl_avatar"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <EditText
            android:id="@+id/group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:hint="@string/group_name"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@id/avatar_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatar_img"
            app:layout_constraintTop_toTopOf="@id/avatar_img" />

        <EditText
            android:id="@+id/group_dec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:hint="@string/group_dec"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/avatar_img"
            app:layout_constraintTop_toBottomOf="@id/avatar_img" />

        <ImageView
            android:id="@+id/admins_avatar"
            android:layout_width="@dimen/large_avatar"
            android:layout_height="@dimen/large_avatar"
            android:background="@drawable/ic_baseline_account_circle_24"
            android:onClick="@{()->groupsViewModel.addAdminsDialog()}"
            app:layout_constraintStart_toStartOf="@id/cancel_button"
            app:layout_constraintEnd_toEndOf="@id/cancel_button"
            app:layout_constraintTop_toBottomOf="@id/group_dec" />

        <TextView
            android:id="@+id/admins_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admins"
            app:layout_constraintEnd_toEndOf="@id/admins_avatar"
            app:layout_constraintStart_toStartOf="@id/admins_avatar"
            app:layout_constraintTop_toBottomOf="@id/admins_avatar" />

        <ImageView
            android:id="@+id/members_avatar"
            android:layout_width="@dimen/large_avatar"
            android:layout_height="@dimen/large_avatar"
            android:background="@drawable/ic_baseline_group_24"
            app:layout_constraintEnd_toEndOf="@id/create"
            android:onClick="@{()->groupsViewModel.addMembersDialog()}"
            app:layout_constraintStart_toStartOf="@id/create"
            app:layout_constraintTop_toBottomOf="@id/group_dec" />

        <TextView
            android:id="@+id/members_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/members"
            app:layout_constraintEnd_toEndOf="@id/members_avatar"
            app:layout_constraintStart_toStartOf="@id/members_avatar"
            app:layout_constraintTop_toBottomOf="@id/members_avatar" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="@dimen/dialog_btn"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            app:layout_constraintEnd_toStartOf="@+id/create"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/admins_text" />

        <Button
            android:id="@+id/create"
            android:layout_width="@dimen/dialog_btn"
            android:layout_height="wrap_content"
            android:text="@string/create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cancel_button"
            app:layout_constraintTop_toBottomOf="@id/admins_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>