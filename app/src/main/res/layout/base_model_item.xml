<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.doit.model.entities.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F0F0">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="@dimen/large_avatar"
            android:layout_height="@dimen/large_avatar"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/small_margin"
            android:src="@{user._image, default = @drawable/ic_baseline_account_circle_24}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_margin"
            android:text="@{user._fullName , default = SOMETESXT}"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/avatar_img"
            app:layout_constraintStart_toEndOf="@id/avatar_img"
            app:layout_constraintTop_toTopOf="@id/avatar_img" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@id/avatar_img"
            android:layout_marginTop="@dimen/small_margin"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>